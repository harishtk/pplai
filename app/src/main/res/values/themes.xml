<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AiAvatar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue_grey_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/blue_grey_700</item>
        <item name="colorSurfaceVariant">@color/white_grey</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="isLightTheme">true</item>
        <item name="android:isLightTheme" tools:targetApi="q">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="colorError">@color/red_700</item>

        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.SnackbarText</item>

    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.AiAvatar</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorSurface">@color/blue_grey_700</item>
        <item name="colorSurfaceVariant">@color/white_grey</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/black</item>

        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorError">@color/red_700</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dialog.FullScreen" parent="">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/app_background_color</item>

        <item name="android:windowAnimationStyle">@style/AnimationStyle.Dialog.Default</item>
    </style>

    <!-- Chips -->
    <style name="ThemeOverlay.App.Chip.Choice" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/design_default_color_surface</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="ThemeOverlay.App.ImageButton" parent="">
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.Dialog" parent="">
        <item name="colorSurface">@color/blue_grey_700</item>
        <item name="colorSurfaceVariant">@color/white_grey</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/black</item>
    </style>

    <!-- Progress Indicator -->
    <style name="ThemeOverlay.App.LinearProgressIndicator" parent="">
        <item name="android:colorPrimary">@color/yellow_200</item>
        <item name="colorPrimary">@color/yellow_200</item>
    </style>

</resources>