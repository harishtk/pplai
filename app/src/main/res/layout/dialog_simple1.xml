<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_gravity="center"
    android:background="@drawable/padded_dialog_background">

    <ImageView android:id="@+id/iv_close"
        android:layout_width="@dimen/default_icon_size"
        android:layout_height="@dimen/default_icon_size"
        android:layout_margin="8dp"
        android:src="@drawable/ic_cancel_alt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/big_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="3dp"
        android:layout_gravity="center"
        android:layout_marginVertical="16dp"
        android:visibility="visible"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/app_icon_rounded"
        tools:visibility="gone" />

    <TextView android:id="@+id/title"
        style="@style/TextStyle.Large.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="8dp"
        android:text="Title"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSurface"
        app:layout_goneMarginTop="@dimen/inset_large_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/big_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/description"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="visible"/>


    <TextView android:id="@+id/description"
        style="@style/TextStyle.VerySmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is a description"
        android:textAlignment="center"
        android:paddingHorizontal="16dp"
        android:paddingBottom="20dp"
        android:textColorLink="@color/red_200"
        android:textColor="?attr/colorOnSurface"
        app:layout_goneMarginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_barrier"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="gone"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottom_barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="button_positive,button_negative"/>

    <com.google.android.material.button.MaterialButton android:id="@+id/button_negative"
        style="@style/Widget.App.FancyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/inset_small"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        app:icon="@drawable/baseline_close_24"
        app:iconGravity="textStart"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_barrier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_positive"
        tools:text="No" />

    <com.google.android.material.button.MaterialButton android:id="@+id/button_positive"
        style="@style/Widget.App.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/inset_small"
        android:includeFontPadding="false"
        app:icon="@drawable/baseline_check_24"
        app:iconGravity="textStart"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
        app:layout_constraintTop_toBottomOf="@id/bottom_barrier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_negative"
        tools:visibility="visible"
        tools:text="Yes"/>

</androidx.constraintlayout.widget.ConstraintLayout>